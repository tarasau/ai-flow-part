{
  "private": true,
  "type": "module",
  "scripts": {
    "check": "cd src/microfrontends/flow && svelte-check --tsconfig ./tsconfig.json",
    "dev:be": "bun --watch src/local.ts",
    "dev:fe": "cd src/client && vite",
    "dev:mf:flow": "cd src/microfrontends/flow && vite",
    "dev": "concurrently \"npm:dev:*\"",
    "pre:build": "NODE_ENV=production bun --env-file=.env.production run pre-build.ts",
    "build:be": "esbuild --bundle --platform=node src/pages.ts --format=esm --outfile=dist/_worker.js",
    "build:mf:flow": "cd src/microfrontends/flow && vite build",
    "build:fe": "cd src/client && vite build",
    "post:build": "NODE_ENV=production bun --env-file=.env.production run post-build.ts",
    "preview": "concurrently \"npm:build:mf:flow\" \"npm:build:fe\" && mv src/microfrontends/flow/dist src/client/dist/assets/flow && rm -rf src/microfrontends/flow/dist && cd src/client && vite preview",
    "build": "rm -rf dist && bun run pre:build && concurrently \"npm:build:*\" && mv src/client/dist/* dist && bun run post:build && mv src/microfrontends/flow/dist dist/assets/flow && rm -rf src/client/dist && rm -rf src/microfrontends/flow/dist",
    "deploy": "wrangler pages deploy dist",
    "migration:create": "bunx drizzle-kit generate",
    "migrate": "NODE_ENV=development bun run src/server/db/migrate.ts",
    "migrate:prod": "NODE_ENV=production bun --env-file=.env.production run src/server/db/migrate.ts",
    "studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@corvu/dialog": "^0.2.2",
    "@hono/zod-validator": "^0.2.2",
    "@neondatabase/serverless": "^0.9.4",
    "@sinclair/typebox": "^0.32.35",
    "@solidjs/router": "^0.13.6",
    "@tanstack/solid-form": "^0.20.3",
    "@tanstack/solid-query": "^5.51.21",
    "@tanstack/solid-table": "^8.20.1",
    "@tanstack/zod-form-adapter": "^0.20.3",
    "@tsndr/cloudflare-worker-jwt": "^2.5.3",
    "@xyflow/svelte": "^0.1.14",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.31.4",
    "hono": "^4.5.3",
    "immer": "^10.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "redux-saga": "^1.3.0",
    "solid-js": "^1.8.19",
    "solid-styled-components": "^0.28.5",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240729.0",
    "@originjs/vite-plugin-federation": "^1.3.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.22.8",
    "prettier": "^3.3.3",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-solid": "^2.10.2",
    "wrangler": "^3.68.0"
  },
  "name": "application",
  "module": "src/pages.ts"
}
