{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "lib": [
      "ESNext",
      "dom"
    ],
    "types": [
      "@cloudflare/workers-types",
      "bun-types"
    ],
    "paths": {
      "@server/*": [
        "./src/server/*"
      ],
      "@infrastructure/*": [
        "./src/client/src/common/infrastructure/*"
      ],
      "@utils/*": [
        "./src/client/src/common/utils/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
    }
  },
}